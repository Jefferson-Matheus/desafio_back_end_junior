{
    "openapi": "3.0.0",
    "info": {
        "title": "Movies API",
        "version": "1.0.0",
        "description": "Esta é uma API para gerenciar informações sobre filmes. Ela permite criar usuários, autenticar, listar filmes (com opções de ordenação e paginação) e adicionar novos filmes com seus respectivos detalhes e banners."
    },
    "servers": [
        {
            "url": "http://localhost:3000",
            "description": "Servidor De Desenvolvimento Local"
        }
    ],
    "tags": [
        {
            "name": "User",
            "description": "Operações relacionadas a usuários."
        },
        {
            "name": "Movie",
            "description": "Operações relacionadas a filmes."
        }
    ],
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT",
                "description": "JWT Authorization header using the Bearer scheme."
            }
        }
    },
    "security": [
        {
            "bearerAuth": []
        }
    ],
    "paths": {
        "/user": {
            "post": {
                "tags": [
                    "User"
                ],
                "description": "Cria Um Novo Usuario",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "userName": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    }
                }
            }
        },
        "/auth": {
            "post": {
                "tags": [
                    "User"
                ],
                "description": "Faz O Login Do Usuario",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Ok"
                    }
                }
            }
        },
        "/movies": {
            "get": {
                "tags": [
                    "Movie"
                ],
                "description": "Lista Todos Os Filmes",
                "responses": {
                    "200": {
                        "description": "Ok"
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        },
        "/movies/sorted": {
            "get": {
                "tags": [
                    "Movie"
                ],
                "description": "Lista Todos Os Filmes Ordenados Por Ano",
                "responses": {
                    "200": {
                        "description": "Ok"
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        },
        "/movie": {
            "post": {
                "tags": [
                    "Movie"
                ],
                "description": "Cria Um Novo Usuario",
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "moviename": {
                                        "type": "string"
                                    },
                                    "sinopse": {
                                        "type": "string"
                                    },
                                    "banner": {
                                        "type": "file",
                                        "format": "base64"
                                    },
                                    "releaseDate": {
                                        "type": "string",
                                        "format": "date"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    }
                }
            }
        },
        "/movies/page/{id}": {
            "get": {
                "tags": [
                    "Movie"
                ],
                "description": "Lista Todos Os Filmes Por Paginação",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "ID Da Página"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ok"
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        }
    }
}