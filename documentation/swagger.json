{
    "openapi": "3.0.0",
    "info": {
        "title": "Movies API",
        "version": "1.0.0",
        "description": "Esta é uma API para gerenciar informações sobre filmes. Ela permite criar usuários, autenticar, listar filmes (com opções de ordenação e paginação) e adicionar novos filmes com seus respectivos detalhes e banners."
    },
    "servers": [
        {
            "url": "http://localhost:3000",
            "description": "Servidor De Desenvolvimento Local"
        }
    ],
    "tags": [
        {
            "name": "User",
            "description": "Operações relacionadas a usuários."
        },
        {
            "name": "Movie",
            "description": "Operações relacionadas a filmes."
        }
    ],
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT",
                "description": "JWT Authorization header using the Bearer scheme."
            }
        }
    },
    "security": [],
    "paths": {
        "/user": {
            "post": {
                "tags": [
                    "User"
                ],
                "description": "Cria Um Novo Usuario",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "userName": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "example":{
                                    "userName": "johndoe",
                                    "email": "john.doe@example.com",
                                    "password": "securePassword123"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    }
                }
            }
        },
        "/auth": {
            "post": {
                "tags": [
                    "User"
                ],
                "description": "Faz O Login Do Usuario",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "example":{
                                    "email": "john.doe@example.com",
                                    "password": "securePassword123"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Ok"
                    }
                }
            }
        },
        "/movies": {
            "get": {
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "tags": [
                    "Movie"
                ],
                "description": "Lista Todos Os Filmes",
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type": "array",
                                    "items":{
                                        "type": "object",
                                        "properties":{
                                            "id":{
                                                "type": "integer",
                                                "example": 1
                                            },
                                            "moviename":{
                                                "type": "string",
                                                "example": "Homem-Aranha Sem Volta Para Casa"
                                            },
                                            "sinopse":{
                                                "type": "string",
                                                "example": "Peter Parker Após Ter Sua Identidade Revelada..."
                                            },
                                            "banner":{
                                                "type":"string",
                                                "example": "Homem-Aranha-sem-volta-para-casa.png"
                                            },
                                            "releaseDate":{
                                                "type": "string",
                                                "format":"date",
                                                "example": "16-12-2021"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        },
        "/movies/sorted": {
            "get": {
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "tags": [
                    "Movie"
                ],
                "description": "Lista Todos Os Filmes Ordenados Por Ano",
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type": "array",
                                    "items":{
                                        "type": "object",
                                        "properties":{
                                            "id":{
                                                "type": "integer",
                                                "example": 5
                                            },
                                            "moviename":{
                                                "type": "string",
                                                "example": "Túmulo dos Vagalumes"
                                            },
                                            "sinopse":{
                                                "type": "string",
                                                "example": "A animação se passa na cidade de Kobe, no Japão Imperial, que conta a história de dois irmãos..."
                                            },
                                            "banner":{
                                                "type":"string",
                                                "example": "Túmulo dos Vagalumes.png"
                                            },
                                            "releaseDate":{
                                                "type": "string",
                                                "format":"date",
                                                "example": "16-4-1988"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        },
        "/movie": {
            "post": {
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "tags": [
                    "Movie"
                ],
                "description": "Cria Um Novo Usuario",
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "moviename": {
                                        "type": "string",
                                        "example": "Akira"
                                    },
                                    "sinopse": {
                                        "type": "string",
                                        "example": "Uma grande explosão fez com que Tóquio fosse destruída em 1988..."
                                    },
                                    "banner": {
                                        "type": "file",
                                        "format": "base64"
                                    },
                                    "releaseDate": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "16-7-1988"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    }
                }
            }
        },
        "/movies/page/{id}": {
            "get": {
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "tags": [
                    "Movie"
                ],
                "description": "Lista Todos Os Filmes Por Paginação",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "ID Da Página"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ok"
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        }
    }
}