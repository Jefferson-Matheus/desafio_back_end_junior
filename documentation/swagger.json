{
    "openapi": "3.0.0",
    "info": {
      "title": "Movies API",
      "version": "1.0.0"
    },
    "components": {
        "securitySchemes": {
          "bearerAuth": {
            "type": "http",
            "scheme": "bearer",
            "bearerFormat": "JWT",
            "description": "JWT Authorization header using the Bearer scheme."
          }
        }
      },
      "security": [
        {
          "bearerAuth": []
        }
      ],
    "paths":{
        "/user":{
            "post":{
                "description": "Cria Um Novo Usuario",
                "requestBody": {
                    "content":{
                        "application/json":{
                            "schema":{
                                "type": "object",
                                "properties":{
                                    "userName": {
                                        "type": "string"
                                    },

                                    "email":{
                                        "type": "string"
                                    },

                                    "password":{
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "201":{
                        "description": "Created"
                    }
                }
            }
        },

        "/auth":{
            "post":{
                "description": "Faz O Login Do Usuario",
                "requestBody": {
                    "content":{
                        "application/json":{
                            "schema":{
                                "type": "object",
                                "properties":{

                                    "email":{
                                        "type": "string"
                                    },

                                    "password":{
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description": "Ok"
                    }
                }
            }
        },

        "/movies":{
            "get":{
                "description": "Lista Todos Os Filmes",
                "responses": {
                    "200":{
                        "description": "Ok"
                    },

                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        },

        "/movies/sorted":{
            "get":{
                "description": "Lista Todos Os Filmes Ordenados Por Ano",
                "responses": {
                    "200":{
                        "description": "Ok"
                    },

                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        },

        "/movie":{
            "post":{
                "description": "Cria Um Novo Usuario",
                "requestBody": {
                    "content":{
                        "multipart/form-data":{
                            "schema":{
                                "type": "object",
                                "properties":{
                                    "moviename": {
                                        "type": "string"
                                    },

                                    "sinopse":{
                                        "type": "string"
                                    },

                                    "banner":{
                                        "type": "file",
                                        "format":  "base64"
                                    },

                                    "releaseDate":{
                                        "type": "string",
                                        "format": "date"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "201":{
                        "description": "Created"
                    }
                }
            }
        },

        "/movies/page/{id}":{
            "get":{
                "description": "Lista Todos Os Filmes Por Paginação",
                "parameters":[
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "ID Da Página"
                    }
                ],
                "responses": {
                    "200":{
                        "description": "Ok"
                    },

                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        }


    }
}